<Window x:Class="Resource_Manager.ExtractDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Resource_Manager"
        xmlns:colorpicker="clr-namespace:ColorPicker;assembly=ColorPicker"
        mc:Ignorable="d"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen"
        UseLayoutRounding="True"
        ResizeMode="NoResize"
        Title="Extraction Settings" Height="380" Width="660.8">
    <Window.Resources>
        <local:VisibilityConverter x:Key="VisibilityConverter" />
        <local:ReverseVisibilityConverter x:Key="ReverseVisibilityConverter" />
    </Window.Resources>
    <Grid Margin="5" >

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <GroupBox FontFamily="{StaticResource Trajan Pro}" FontSize="16" FontWeight="Bold"  Header="Common Settings:"  Margin="0,10" Grid.Row="0">
            <Grid VerticalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition Height="*" />
                    <RowDefinition/>
                    <RowDefinition Height="*" />
                    <RowDefinition/>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock FontWeight="Normal" FontFamily="{StaticResource Trajan Pro}" FontSize="16"  HorizontalAlignment="Left" VerticalAlignment="Center" Text="Extraction path:"/>
                <TextBox VerticalContentAlignment="Center"  FontSize="14" IsReadOnly="True" FontWeight="Normal" Margin="5,0" HorizontalAlignment="Stretch" x:Name="ExportPath" Grid.Column="1" Width="356"/>
                <Button FontWeight="Normal" Width="100" Grid.Column="2" FontFamily="{StaticResource Trajan Pro}" FontSize="16" x:Name="NavigatePathButton" Click="NavigateButton_Click" Content="Browse..."/>
                <CheckBox x:Name="cbDecompress" FontWeight="Normal" IsChecked="{Binding Path=AutoDecompress, Mode=TwoWay}" Grid.Row="1" Grid.ColumnSpan="3" FontFamily="{StaticResource Trajan Pro}" FontSize="16" Content="Auto decompress compressed files"/>
                <TextBlock Visibility="{Binding ElementName=cbDecompress, Path=IsChecked, Converter={StaticResource VisibilityConverter}}" Grid.ColumnSpan="3" FontWeight="Normal" FontSize="12" Text="If you do not decompress them, you will not be able to open and edit these files." Grid.Row="2"   TextWrapping="Wrap" HorizontalAlignment="Left" Foreground="Red"  />
                <CheckBox x:Name="cbOneDirectory" FontWeight="Normal" IsChecked="{Binding Path=OneFolder, Mode=TwoWay}" Grid.Row="3" Grid.ColumnSpan="3" FontFamily="{StaticResource Trajan Pro}" FontSize="16" Content="Extract files to one folder"/>
                <TextBlock Visibility="{Binding ElementName=cbOneDirectory, Path=IsChecked, Converter={StaticResource ReverseVisibilityConverter}}" Grid.ColumnSpan="3" FontWeight="Normal" FontSize="12" Text="Useful to display files together at once and have a clear view in Windows Explorer." Grid.Row="4"   TextWrapping="Wrap" HorizontalAlignment="Left" Foreground="Red"  />

            </Grid>
        </GroupBox>

        <GroupBox FontFamily="{StaticResource Trajan Pro}" FontSize="16" FontWeight="Bold"  Header="Images Settings:"  Margin="0,10" Grid.Row="1">
            <Grid VerticalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <CheckBox FontWeight="Normal" IsChecked="{Binding Path=AutoDDTToPNGConversion, Mode=TwoWay}" Grid.Row="0" Grid.ColumnSpan="3" FontFamily="{StaticResource Trajan Pro}" FontSize="16" Content="Auto convert .DDT files to .PNG"/>
                <CheckBox FontWeight="Normal" IsChecked="{Binding Path=AutoDDTToTGAConversion, Mode=TwoWay}" Grid.Row="1" Grid.ColumnSpan="3" FontFamily="{StaticResource Trajan Pro}" FontSize="16" Content="Auto convert .DDT files to .TGA"/>
                <StackPanel Grid.Row="2" Grid.ColumnSpan="3" Orientation="Horizontal">
                <colorpicker:PortableColorPicker
                                            x:Name="ColorPicker"
                    FontFamily="Segoe UI"
                    FontWeight="Normal" FontSize="12"
                                          Margin="0,0,10,0"
                                            Width="16"
                                            Height="16"
                    ShowAlpha="False"
                    Cursor="Hand"
                                            ToolTip="Select Color"
                                            
                                            
                                            SmallChange="5" ColorChanged="ColorPicker_ColorChanged" />
                    <CheckBox VerticalContentAlignment="Center" x:Name="cbSavePNGasBMP" FontWeight="Normal" IsChecked="{Binding Path=SavePNGasBMP, Mode=TwoWay}"  FontFamily="{StaticResource Trajan Pro}" FontSize="16" Content="Apply color instead of the transparent part for .PNG" />
                </StackPanel>
                <TextBlock Visibility="{Binding ElementName=cbSavePNGasBMP, Path=IsChecked, Converter={StaticResource VisibilityConverter}}" Grid.ColumnSpan="3" FontWeight="Normal" FontSize="12" Text="Attention! The color overlay replaces the transparent part of the images and is used for portrait icons. Do not use for other transparent images." Grid.Row="3"   TextWrapping="Wrap" HorizontalAlignment="Left" Foreground="Red"  />

            </Grid>
        </GroupBox>
        <GroupBox FontFamily="{StaticResource Trajan Pro}" FontSize="16" FontWeight="Bold"  Header=".XMB (.XML) Settings:"  Margin="0,10" Grid.Row="2">
            <Grid VerticalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <CheckBox FontWeight="Normal" IsChecked="{Binding Path=AutoXMBConversion, Mode=TwoWay}" Grid.Row="0" Grid.ColumnSpan="3" FontFamily="{StaticResource Trajan Pro}" FontSize="16" Content="Auto convert .XMB files to .XML"/>
                <CheckBox FontWeight="Normal" IsChecked="{Binding Path=AutoJSONConversion, Mode=TwoWay}" Grid.Row="1" Grid.ColumnSpan="3" FontFamily="{StaticResource Trajan Pro}" FontSize="16" Content="Auto convert .XMB (.XML) files to .JSON"/>
            </Grid>
        </GroupBox>
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button FontFamily="{StaticResource Trajan Pro}" FontSize="16" Margin="10,0"   Width="100" x:Name="ExportButton" Click="ExportButton_Click" Content="Extract"/>
            <Button FontFamily="{StaticResource Trajan Pro}" FontSize="16"  Width="100"  x:Name="CancelButton" Click="CancelButton_Click" Content="Cancel"/>
        </StackPanel>
    </Grid>
</Window>